<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="798.0" prefWidth="1009.0" spacing="20" styleClass="root" stylesheets="@manage_account.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ManageAccountController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label styleClass="text-title" text="Mon Compte" />

    <Label styleClass="label" text="Nom" />
    <TextField fx:id="nomField" prefWidth="300.0" styleClass="text-field" />

    <Label styleClass="label" text="Prénom" />
    <TextField fx:id="prenomField" prefWidth="300.0" styleClass="text-field" />

    <Label styleClass="label" text="Email" />
    <TextField fx:id="emailField" prefWidth="300.0" editable="false" styleClass="text-field" />

    <Label styleClass="label" text="Téléphone" />
    <TextField fx:id="telField" prefWidth="300.0" styleClass="text-field" />

    <Label styleClass="label" text="Date de Naissance" />
    <TextField fx:id="dateNaissField" prefWidth="300.0" styleClass="text-field" />

    <Button onAction="#handleSave" styleClass="button-save" text="Sauvegarder" />
    <Button onAction="#handleBackAction" styleClass="button-back" text="Back" />
</VBox>
