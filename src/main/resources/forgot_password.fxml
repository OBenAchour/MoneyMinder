.root {
        -fx-background-color: linear-gradient(to bottom, #f0f4f8, #d9e2ec);
        -fx-padding: 20px;
        -fx-spacing: 20px;
        -fx-alignment: center;
        }

        .label {
        -fx-font-size: 14px;
        -fx-fill: #34495e;
        }

        .text-field {
        -fx-pref-width: 200px;
        -fx-padding: 5px;
        -fx-background-radius: 5px;
        -fx-border-radius: 5px;
        -fx-border-color: #ccc;
        -fx-border-width: 1px;
        }

        .button-submit {
        -fx-font-size: 14px;
        -fx-background-color: #3498db;
        -fx-text-fill: white;
        -fx-background-radius: 10;
        -fx-padding: 10px 20px;
        }

        .button-back {
        -fx-font-size: 14px;
        -fx-background-color: #2ecc71;
        -fx-text-fill: white;
        -fx-background-radius: 10;
        -fx-padding: 10px 20px;
        }

        .text-title {
        -fx-font-size: 24px;
        -fx-font-weight: bold;
        -fx-fill: #2c3e50;
        }

        .info-label {
        -fx-text-fill: green;
        -fx-font-size: 12px;
        -fx-padding: 5px;
        }
