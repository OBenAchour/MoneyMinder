<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="342.0" prefWidth="477.0" spacing="20" styleClass="root" stylesheets="@forgot_password.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ForgotPasswordController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label styleClass="text-title" text="Enter your email to reset password" />
    <TextField fx:id="emailField" promptText="Email" styleClass="text-field" />
    <Button onAction="#handleSendCodeAction" styleClass="button-send" text="Send Code" />
    <Button onAction="#handleBackAction" styleClass="button-back" text="Back" />
</VBox>
