<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" maxWidth="799.0" prefHeight="452.0" prefWidth="799.0" spacing="30" styleClass="root" stylesheets="@welcome.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.WelcomeController">
    <padding>
        <Insets bottom="50" left="20" right="20" top="50" />
    </padding>
    <ImageView fx:id="logoImageView" fitHeight="180.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" />
    <Text fx:id="welcomeText" styleClass="text-welcome" text="Welcome to MoneyMinder! Your financial companion." textAlignment="CENTER" wrappingWidth="300" />
    <Text fx:id="appNameText" styleClass="text-title" text="MoneyMinder" />
    <Button fx:id="registerButton" onAction="#handleRegisterButtonAction" styleClass="action-button register-button" text="Register" textAlignment="CENTER" />
    <Button fx:id="loginButton" onAction="#handleLoginButtonAction" styleClass="action-button login-button" text="Login" />
</VBox>
