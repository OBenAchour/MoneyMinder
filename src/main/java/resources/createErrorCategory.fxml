<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="513.0" prefWidth="413.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.errorCategoryController" stylesheets="@styles.css">
   <children>
      <Label layoutX="70.0" layoutY="39.0" text="Add Error Category" styleClass="label-title">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Label layoutX="34.0" layoutY="130.0" text="Name : " styleClass="label-subtitle">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="nameTextField" layoutX="103.0" layoutY="128.0" styleClass="text-field" />
      <Button layoutX="324.0" layoutY="128.0" mnemonicParsing="false" onAction="#addErrorCategory" text="Add" styleClass="button-add" />
      <TableView fx:id="errorCategoryTableView" layoutX="42.0" layoutY="182.0" styleClass="table-view">
         <columns>
            <TableColumn fx:id="nameColumn" styleClass="table-column-name" text="Name" />
            <TableColumn fx:id="removeColumn" styleClass="table-column-action" text="Action" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
